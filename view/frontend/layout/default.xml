<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Acme_FahimNews::css/category_sidebar.css"/>
        <css src="Acme_FahimNews::css/widget.css"/>
    </head>
    <body>
        <referenceBlock name="header.links">
            <block class="Acme\FahimNews\Block\Top\Link" name="news-link" ifconfig="acme_fahimnews/general/top_menu_link"/>
        </referenceBlock>
        <referenceBlock name="footer_links">
            <block class="Acme\FahimNews\Block\Top\Link" name="news-link-footer"
                   ifconfig="acme_fahimnews/general/footer_link"/>
			<block class="Acme\FahimNews\Block\Top\Sitemap" name="sitemap-link-footer"
                   ifconfig="acme_fahimnews/general/show_sitemap"/>
        </referenceBlock>
    </body>
</page>
